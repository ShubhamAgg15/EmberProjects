<div class="jumbotron">
    <div class="form-group form-horizontal row form-group-lg">
        <div class="col-md-5">
            <Textarea class="form-control" rows="3" @value={{this.msg}} placeholder="Please enter your message"></Textarea>
        </div>
        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-4 col-md-offset-2">
            <Input class="form-control" type="email" @value={{this.emailAddress}} placeholder="Please enter your email address."/> 
        </div>
        <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
            <button disabled={{this.isDisabled}} type="button" class="btn btn-primary btn-block btn-lg" {{on 'click' this.SendMessage}}>Send Message</button>
        </div>
    </div>
    {{#if this.responseMsg}}
        <div class="alert alert-success">{{this.responseMsg}}</div>
    {{/if}}
</div>