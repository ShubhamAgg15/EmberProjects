<div class="panel panel-default library-item">
    <div class="panel-heading">
        <h3 class="panel-title">{{@item.name}}</h3>
    </div>
    <div class="panel-body">
        <p>Address: {{@item.address}}</p>
        <p>Phone: {{@item.phone}}</p>
    </div>
    <div class="panel-footer">
        <LinkTo @route="libraries.edit" @model={{@item.id}} class="btn btn-success btn-xs">Edit</LinkTo>
        <button type="button" class="btn btn-danger btn-xs" {{on 'click' (fn @deleteAction @item)}}>Delete</button>
    </div>
</div>