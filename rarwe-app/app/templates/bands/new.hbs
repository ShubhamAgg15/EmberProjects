<h3 class="text-lg leading-6 font-medium text-gray-100">
    New Band
</h3>
<div class="mt-6 grid grid-cols-1 row-gap-6 col-gap-4 sm:grid-cols-6">
    <div class="sm:col-span-4">
        <label for="name" class="block text-sm font-medium leading-5">Name</label>
        <div class="mt-1 relative rounded-md shadow-sm">
            <Input id="name" @value={{this.name}} data-test-rr="new-band-name"
             class="w-full text-gray-800 bg-white border rounded-md py-2 px-4"/>
        </div>
    </div>
    <div class="sm:col-span-4">
        <button type="button" class="px-4 py-2 rounded bg-purple-600 shadow-md hover:shadow-lg
            hover:text-white" {{on 'click' this.saveBand}} data-test-rr="save-band-button">Save</button>
    </div>
</div>
